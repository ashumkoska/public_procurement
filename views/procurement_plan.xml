<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        
        <record model="ir.ui.view" id="procurement_plan_form_view">
            <field name="name">procurement.plan.form</field>
            <field name="model">procurement.plan</field>
            <field name="arch" type="xml">
                <form string="Procurement Plan">
                    <header>
                        <button name="submit" type="object" class="btn-primary" string="Submit" states="draft"/>
                        <button name="accept_offers" type="object" class="btn-primary" string="Accept Offers" states="submit"/>
                        <button name="auction" type="object" class="btn-primary" string="Auction" states="offers"/>
                        <button name="decision" type="object" class="btn-primary" string="Decision" states="offers,auction"/>
                        <button name="submit_to_commision" type="object" class="btn-primary" string="Submit to Commission" states="decision"/>
                        <!-- button name="approve" type="object" class="btn-primary" string="Approve" states="decision"/ -->
                        <button name="cancel" type="object" string="Cancel" states="draft,submit,offers,auction,decision,approve,archive"/>
                        <button name="archive" type="object" class="btn-primary" string="Send to Archive" states="approve"/>
                        <button name="complaint" type="object" string="Complaint" states="cancel"/>
                        <button name="contract" type="object" class="btn-primary" string="Contract" states="archive,complaint"/>
                        <button name="done" type="object" string="Done" class="btn-primary" states="contract"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,submit,decision,approve,contract,done"/>                       
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="action"
                                name="%(public_procurement.procurement_plan_offers_act_window)d" icon="fa-folder-open-o">
                                <field string="Offers" name="offers_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1><field name="name" placeholder="Title" coslpan="2"/></h1>
                        </div>
                        <group name="general">
                            <group>
                                <field name="user_id"/>
                                <field name="plan_date"/>
                            </group>
                            <group>
                                <field name="currency_id"/>
                                <field name="complaint_deadline" attrs="{'invisible': [('state', 'not in', ['cancel'])]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="items" string="Procurement Items">
                                <field name="plan_line_ids">
                                    <tree>
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id"/>
                                        <field name="name"/>
                                        <field name="type_id"/>
                                        <field name="quantity"/>
                                        <field name="uom_id" groups="product.group_uom"/>
                                        <field name="unit_price"/>
                                        <field name="total_price" widget="monetary"/>
                                        <field name="currency_id" invisible="1"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <group>
                                                <field name="plan_id" invisible="1"/>
                                                <field name="product_id"/>
                                                <field name="name"/>
                                                <field name="type_id"/>
                                            </group>
                                            <group>
                                                <label for="quantity"/>
                                                <div class="o_row">
                                                    <field name="quantity"/>
                                                    <field name="uom_id" groups="product.group_uom"/>
                                                </div>
                                                <field name="unit_price"/>
                                                <field name="total_price"/>
                                                <field name="currency_id" invisible="1"/>
                                            </group>
                                        </group>
                                    </form>
                                </field>
                                <group class="oe_subtotal_footer oe_right">
                                    <field name="estimated_budget" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                </group>                               
                            </page>
                            <page name="description" string="Technical Specification">
                                <field name="description" placeholder="Click to add technical specification"/>                               
                            </page>
                            <page name="commission" string="Commission Members">
                                <field name="com_member_ids">
                                    <tree>
                                        <field name="name"/>
                                    </tree>
                                </field>                               
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" help="Follow this document to automatically track the events associated to lines of this document." groups="base.group_user"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
    
        <record model="ir.ui.view" id="procurement_plan_search_view">
            <field name="name">procurement.plan.search</field>
            <field name="model">procurement.plan</field>
            <field name="arch" type="xml">
                <search string="Search Procurement Plan">
                    <field name="name" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"
                           string="Procurement Plan"/>
                    <field name="user_id"/>
                    <field name="estimated_budget"/>
                    <group expand="0" string="Group By">
                        <filter name="group_user" string="User" context="{'group_by': 'user_id'}"/>
                        <!-- TODO: default state filter -->
                    </group>
                </search>
            </field>
        </record>
    
        <record model="ir.ui.view" id="procurement_plan_tree_view">
            <field name="name">procurement.plan.tree</field>
            <field name="model">procurement.plan</field>
            <field name="arch" type="xml">
                <tree decoration-muted="state == 'done'" string="Procurement Plans">
                    <field name="state" invisible="1"/>
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="estimated_budget"/>
                    <field name="plan_date"/>
                    <field name="complaint_deadline"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="procurement_plan_kanban_view">
            <field name="name">procurement.plan.kanban</field>
            <field name="model">procurement.plan</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_dashboard">
                    <field name="name"/>
                    <field name="user_id"/>
                    <field name="plan_date"/>
                    <field name="complaint_deadline"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong>
                                        <field name="name"/>
                                    </strong>
                                    <div>
                                        <span>Date: </span>
                                        <strong>
                                            <field name="plan_date"/>
                                        </strong>
                                    </div>
                                    <div>
                                        <span>Estimated Budget: </span>
                                        <strong>
                                            <field name="estimated_budget" widget="monetary"/>
                                        </strong>
                                    </div>                                    
                                    <t t-if="complaint_deadline">
                                        <div>
                                            <span>Complaint Deadline: </span>
                                            <strong>
                                                <field name="complaint_deadline"/>
                                            </strong>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        
        <record model="ir.ui.view" id="procurement_item_type_tree_view">
            <field name="name">procurement.item.type.tree</field>
            <field name="model">procurement.plan.line.type</field>
            <field name="arch" type="xml">
                <tree string="Procurement Item Types" editable="bottom">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
    
    </data>
</odoo>
